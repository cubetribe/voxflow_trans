# Server Configuration
PORT=8000
HOST=0.0.0.0
WORKERS=1

# Environment
ENVIRONMENT=development
DEBUG=true

# Voxtral Model Configuration
MODEL_NAME=mistralai/Voxtral-Mini-3B-2507
MODEL_CACHE_DIR=./models
DEVICE=mps
PRECISION=float16
MAX_AUDIO_LENGTH=1800
CHUNK_SIZE=30
OVERLAP_SIZE=2

# Audio Processing
SAMPLE_RATE=16000
AUDIO_CHANNELS=1
VAD_AGGRESSIVENESS=3
NOISE_REDUCTION=true

# Performance
BATCH_SIZE=1
MAX_CONCURRENT_REQUESTS=5
MODEL_TIMEOUT=300
INFERENCE_TIMEOUT=120

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=./logs/app.log

# Cache Configuration
ENABLE_CACHE=true
CACHE_TTL=3600
MAX_CACHE_SIZE=1000

# Health Check
HEALTH_CHECK_TIMEOUT=30

# File Upload
MAX_FILE_SIZE=500MB
TEMP_DIR=./temp
UPLOAD_TIMEOUT=300

# Redis (if using distributed cache)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090